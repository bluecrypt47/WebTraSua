@model WebBanTranSua.Models.EF.SanPham

@{
    ViewBag.Title = "Cập nhật";
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
}

@section header {
    Cập nhật người dùng
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Cập nhật thông tin
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.maSanPham)

                            <div class="form-group">
                                @Html.LabelFor(model => model.maLoaiSanPham, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.DropDownListFor(model => model.maLoaiSanPham, null, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.maLoaiSanPham, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.tenSanPham, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.tenSanPham, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.tenSanPham, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.hinhAnh, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.hinhAnh, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.hinhAnh, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.giaBan, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.giaBan, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.giaBan, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.dvt, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.dvt, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.dvt, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.giamGia, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.giamGia, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.giamGia, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.gioiThieuSanPham, htmlAttributes: new { @class = "control-label col-md-3" })
                                @Html.TextBoxFor(model => model.gioiThieuSanPham, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.gioiThieuSanPham, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.sanPhamMoi, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="checkbox">
                                    @Html.CheckBoxFor(model => model.sanPhamMoi)
                                    @Html.ValidationMessageFor(model => model.sanPhamMoi, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group" style="clear:left;">
                                @Html.LabelFor(model => model.sanPhamNoiBat, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="checkbox">
                                    @Html.CheckBoxFor(model => model.sanPhamNoiBat)
                                    @Html.ValidationMessageFor(model => model.sanPhamNoiBat, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Cập nhật" class="btn btn-default" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Quay lại danh sách", "ListProucts")
</div>
