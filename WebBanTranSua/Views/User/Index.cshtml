@model PagedList.IPagedList<WebBanTranSua.Models.EF.TaiKhoan>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section header {
    Danh sách Người dùng
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách người dùng
            </div>
            <p class="btn btn-link">
                @Html.ActionLink("Thêm người dùng", "Create")
            </p>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Loại tài khoản</th>
                                <th>Email</th>
                                <th>Tên người dùng</th>
                                <th>Địa chỉ</th>
                                <th>Số điện thoại</th>
                                <th>Sửa</th>
                                <th>Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td></td>
                                    @if (@item.maLoaiTaiKhoan == true)
                                    {
                                        <td>Quản trị</td>
                                    }
                                    else
                                    {
                                        <td>Người dùng</td>
                                    }
                                    <td>@item.email</td>
                                    <td>@item.tenNguoiDung</td>
                                    <td>@item.diaChi</td>
                                    <td>@item.sdt</td>
                                    <td><a href="/User/Edit/@item.id">Cập nhật</a></td>
                                    <td><a href="/User/Delete/@item.id">Xóa</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
